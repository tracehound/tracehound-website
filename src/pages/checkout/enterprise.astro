---
import { Check, Shield } from 'lucide-react'
import Footer from '../../components/Footer.astro'
import Navbar from '../../components/Navbar.astro'
import Layout from '../../layouts/Layout.astro'

const benefits = [
  'Multi-Instance Coordination (Redis)',
  'Distributed State Management',
  'SIEM Integration (Splunk, Elastic)',
  'Compliance Reports (SOC2, HIPAA)',
  'Priority Slack Support',
  'SLA Guarantees',
]
---

<Layout
  title="Contact Enterprise Sales | Tracehound"
  description="High-scale security for demanding runtimes."
>
  <Navbar />

  <main class="flex-1 py-32">
    <div class="container-custom max-w-4xl">
      <div class="grid md:grid-cols-2 gap-16">
        <div>
          <div
            class="inline-flex items-center gap-2 px-3 py-1 bg-surface/50 border border-surface-highlight rounded-full text-xs font-mono text-text-muted mb-6"
          >
            <Shield className="w-3 h-3" /> Enterprise
          </div>
          <h1 class="text-3xl md:text-5xl font-bold mb-6 tracking-tight">Scale with Confidence.</h1>
          <p class="text-xl text-text-muted mb-8">
            For teams that need distributed coordination, compliance artifacts, and guaranteed SLAs.
          </p>

          <div class="space-y-4 mb-8">
            {
              benefits.map((benefit) => (
                <div class="flex items-start gap-3">
                  <div class="p-1 bg-surface-highlight rounded-full mt-0.5">
                    <Check className="w-4 h-4 text-white" />
                  </div>
                  <span class="text-text-muted">{benefit}</span>
                </div>
              ))
            }
          </div>
        </div>

        <div class="bg-surface/30 border border-surface-highlight rounded-sm p-8">
          <h2 class="text-xl font-bold mb-2">Contact Sales</h2>
          <p class="text-text-muted text-sm mb-6">
            Tell us about your infrastructure and we will build a custom deployment plan for you.
          </p>

          <form class="space-y-4">
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label for="name" class="block text-xs font-mono text-text-muted uppercase mb-2"
                  >Name</label
                >
                <input
                  type="text"
                  id="name"
                  class="w-full bg-background border border-surface-highlight rounded-sm px-4 py-3 text-white focus:outline-none focus:border-white/20 transition-colors"
                />
              </div>
              <div>
                <label for="email" class="block text-xs font-mono text-text-muted uppercase mb-2"
                  >Work Email</label
                >
                <input
                  type="email"
                  id="email"
                  class="w-full bg-background border border-surface-highlight rounded-sm px-4 py-3 text-white focus:outline-none focus:border-white/20 transition-colors"
                />
              </div>
            </div>

            <div>
              <label for="company" class="block text-xs font-mono text-text-muted uppercase mb-2"
                >Company Size</label
              >
              <select
                id="company"
                class="w-full bg-background border border-surface-highlight rounded-sm px-4 py-3 text-white focus:outline-none focus:border-white/20 transition-colors appearance-none"
              >
                <option>1-50 employees</option>
                <option>51-200 employees</option>
                <option>201-1000 employees</option>
                <option>1000+ employees</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-xs font-mono text-text-muted uppercase mb-2"
                >Anything specific?</label
              >
              <textarea
                id="message"
                rows="3"
                class="w-full bg-background border border-surface-highlight rounded-sm px-4 py-3 text-white focus:outline-none focus:border-white/20 transition-colors"
              ></textarea>
            </div>

            <div class="pt-4">
              <button
                type="button"
                class="w-full bg-white text-black font-bold uppercase tracking-wider py-4 rounded-sm hover:bg-white/90 transition-colors"
              >
                Contact Sales
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
