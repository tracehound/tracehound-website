---
import { Check, Shield } from 'lucide-react'
import Footer from '../../components/Footer.astro'
import Navbar from '../../components/Navbar.astro'
import Layout from '../../layouts/Layout.astro'

const benefits = [
  'Full Security Model (Agent, Quarantine, AuditChain)',
  'HoundPool Isolation (1 process, 64MB)',
  'Rate Limiter (token bucket)',
  'Tamper-evident forensic logging',
  'Same security as Pro â€” smaller scale',
]
---

<Layout title="Get Starter | Tracehound" description="Same security, small scale. Start at $9/month.">
  <Navbar />

  <main class="flex-1 py-32">
    <div class="container-custom max-w-4xl">
      <div class="grid md:grid-cols-2 gap-16">
        <div>
          <div class="inline-flex items-center gap-2 px-3 py-1 rounded-sm border border-primary/30 bg-primary/10 text-primary text-xs font-mono mb-6">
            <Shield className="w-3 h-3" />
            SAME SECURITY MODEL
          </div>

          <h1 class="text-3xl md:text-5xl font-bold mb-6 tracking-tight">
            Get <span class="text-primary">Starter</span>
          </h1>
          <p class="text-xl text-text-muted mb-4">
            Full security isolation at small scale.
          </p>
          <p class="text-text-muted mb-8">
            <span class="text-white font-bold text-2xl">$9</span>
            <span class="text-sm"> / month per service</span>
          </p>

          <div class="space-y-4 mb-8">
            {
              benefits.map((benefit) => (
                <div class="flex items-start gap-3">
                  <div class="p-1 bg-primary/10 rounded-full mt-0.5">
                    <Check className="w-4 h-4 text-primary" />
                  </div>
                  <span class="text-text-muted">{benefit}</span>
                </div>
              ))
            }
          </div>

          <div class="p-6 bg-surface/30 border border-surface-highlight rounded-sm">
            <p class="text-sm text-text-muted font-mono">
              "Starter gives us the same HoundPool isolation as Pro.
              We're small but we're not less secure."
            </p>
          </div>
        </div>

        <div class="bg-surface/30 border border-surface-highlight rounded-sm p-8">
          <h2 class="text-xl font-bold mb-2">Get Started</h2>
          <p class="text-text-muted text-sm mb-6">
            Start protecting your application with enterprise-grade isolation.
          </p>

          <form class="space-y-4">
            <div>
              <label for="email" class="block text-xs font-mono text-text-muted uppercase mb-2"
                >Email</label
              >
              <input
                type="email"
                id="email"
                class="w-full bg-background border border-surface-highlight rounded-sm px-4 py-3 text-white focus:outline-none focus:border-primary transition-colors"
                placeholder="you@example.com"
              />
            </div>

            <div class="pt-4">
              <button
                type="button"
                class="w-full bg-primary text-background font-bold uppercase tracking-wider py-4 rounded-sm hover:bg-primary/90 transition-colors"
              >
                Start Starter Plan
              </button>
              <p class="text-center text-xs text-text-muted mt-4">
                Instant access. No credit card required for trial.
              </p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
