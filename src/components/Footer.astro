---
const currentYear = new Date().getFullYear()

const productLinks = [
  { label: 'Overview', href: '/' },
  { label: 'How it Works', href: '/how-it-works' },
  { label: 'Pricing', href: '/pricing' },
  { label: 'Security', href: '/security' },
  { label: 'Changelog', href: '/changelog' },
]

const resourcesLinks = [
  { label: 'Documentation', href: '/docs/quickstart' },
  { label: 'API Reference', href: '/docs/api' },
  { label: 'Blog', href: '/blog' },
  {
    label: 'Contributing',
    href: 'https://github.com/laphilosophia/tracehound/blob/main/CONTRIBUTING.md',
  },
]

const legalLinks = [
  { label: 'Privacy Policy', href: '/legal/privacy' },
  { label: 'Terms of Service', href: '/legal/terms' },
  { label: 'Cookie Policy', href: '/legal/cookies' },
  { label: 'Acceptable Use Policy', href: '/legal/aup' },
]
---

<footer class="border-t border-surface-highlight bg-background py-16 text-sm">
  <div class="container-custom">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-16">
      <div class="col-span-2 md:col-span-1">
        <a
          href="/"
          class="flex items-center gap-2 font-bold text-xl tracking-tight mb-4 text-white"
        >
          <img src="/logo.svg" alt="Logo" class="h-6 w-6" loading="lazy" />
          <span class="font-mono">Tracehound</span>
        </a>
        <p class="text-text-muted mb-6 leading-relaxed max-w-xs">
          The deterministic security buffer for modern Node.js applications.
        </p>
      </div>

      <div>
        <h4 class="font-bold text-white mb-6 uppercase tracking-wider text-xs">Product</h4>
        <ul class="space-y-3">
          {
            productLinks.map((link) => (
              <li>
                <a href={link.href} class="text-text-muted hover:text-primary transition-colors">
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h4 class="font-bold text-white mb-6 uppercase tracking-wider text-xs">Resources</h4>
        <ul class="space-y-3">
          {
            resourcesLinks.map((link) => (
              <li>
                <a href={link.href} class="text-text-muted hover:text-primary transition-colors">
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h4 class="font-bold text-white mb-6 uppercase tracking-wider text-xs">Legal</h4>
        <ul class="space-y-3">
          {
            legalLinks.map((link) => (
              <li>
                <a href={link.href} class="text-text-muted hover:text-primary transition-colors">
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <div
      class="pt-8 border-t border-surface-highlight flex flex-col md:flex-row items-center justify-between gap-4 text-text-muted"
    >
      <div>&copy; {currentYear} Tracehound. All rights reserved.</div>
      <div class="flex gap-6 text-xs">
        {/* Additional bottom links if needed */}
      </div>
    </div>
  </div>
</footer>
