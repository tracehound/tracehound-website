---
import { Github } from 'lucide-react';

const links = [
  { href: '/docs/getting-started', label: 'Docs' },
  { href: '/docs/api', label: 'API' },
  { href: '/docs/roadmap', label: 'Roadmap' },
];
---

<nav class="sticky top-0 z-50 w-full border-b border-surface-highlight bg-background/80 backdrop-blur-md">
  <div class="container-custom flex h-16 items-center justify-between">
    <a href="/" class="flex items-center space-x-2 font-bold text-xl tracking-tighter">
      <span class="text-primary">Trace</span><span class="text-white">hound</span>
    </a>

    <div class="hidden md:flex items-center space-x-6">
      {links.map((link) => (
        <a
          href={link.href}
          class="text-sm font-medium text-text-muted hover:text-primary transition-colors"
        >
          {link.label}
        </a>
      ))}
    </div>

    <div class="flex items-center space-x-4">
      <a
        href="https://github.com/tracehound/core"
        target="_blank"
        rel="noreferrer"
        class="text-text-muted hover:text-white transition-colors"
      >
        <Github className="h-5 w-5" />
        <span class="sr-only">GitHub</span>
      </a>
    </div>
  </div>
</nav>
