---
import { Github } from 'lucide-react'

const links = [
  { href: '/pricing', label: 'Pricing' },
  { href: '/docs/getting-started', label: 'Docs' },
  { href: '/docs/api', label: 'API' },
  { href: '/docs/roadmap', label: 'Roadmap' },
]
---

<nav
  class="sticky top-0 z-50 w-full border-b border-surface-highlight bg-background/95 backdrop-blur-sm"
>
  <div class="container-custom relative flex h-16 items-center justify-between">
    <a href="/" class="flex items-center gap-3 font-bold text-xl tracking-tight group">
      <div
        class="p-1.5 bg-primary/10 border border-primary/20 rounded-sm group-hover:bg-primary/20 transition-colors"
      >
        <img src="/logo.svg" alt="Logo" class="h-6 w-6" />
      </div>
      <span class="font-mono">Tracehound</span>
    </a>

    <!-- Desktop Links -->
    <div class="hidden md:flex items-center gap-1">
      {
        links.map((link) => (
          <a
            href={link.href}
            class="px-4 py-2 text-sm font-medium text-text-muted hover:text-white hover:bg-white/5 rounded-sm transition-all">
            {link.label}
          </a>
        ))
      }
    </div>

    <!-- Right Side -->
    <div class="flex items-center gap-4">
      <a
        href="https://github.com/tracehound/core"
        target="_blank"
        rel="noreferrer"
        class="hidden sm:flex items-center gap-2 px-3 py-1.5 text-xs font-mono text-text-muted border border-surface-highlight hover:border-primary/50 hover:text-primary rounded-sm transition-all"
      >
        <Github className="h-4 w-4" />
        <span>GitHub</span>
      </a>
    </div>
  </div>
</nav>
