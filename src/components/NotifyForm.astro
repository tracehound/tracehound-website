---
interface Props {
  product: string
  color: string
  placeholder?: string
}

const { product, color, placeholder = 'Enter your email' } = Astro.props
---

<div class="w-full max-w-md">
  <form class="flex flex-col sm:flex-row gap-3" action="#" method="POST" data-product={product}>
    <input
      type="email"
      name="email"
      required
      placeholder={placeholder}
      class="flex-1 px-4 py-3 bg-surface border border-surface-highlight rounded-sm text-white placeholder:text-text-muted focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-background transition-all"
      style={`--tw-ring-color: ${color}`}
    />
    <button
      type="submit"
      class="px-6 py-3 font-medium rounded-sm transition-all whitespace-nowrap"
      style={`background-color: ${color}; color: #080808;`}
    >
      Notify Me
    </button>
  </form>
  <p class="mt-3 text-xs text-text-muted">
    We'll notify you when {product} is ready. No spam, ever.
  </p>
</div>
