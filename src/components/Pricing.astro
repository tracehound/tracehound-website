---
import { AlertTriangle, Check, X } from 'lucide-react'

// Updated data structure for detailed pricing
// Updated data structure for detailed pricing
const tiers = [
  {
    name: 'Tracehound Core',
    subtitle: 'Deterministic Runtime Component',
    price: '$299',
    period: '/ month',
    tagline: 'You get the engine. You own the operational envelope.',
    guaranteed: [
      'Deterministic execution under normal and degraded conditions',
      'Explicit memory ownership and bounded degradation',
      'Configurable quarantine and cold storage primitives',
      'Fire-and-forget evidence persistence (write-only, no read-back)',
    ],
    notGuaranteed: [
      'Backward compatibility across minor versions',
      'Stable event contracts',
      'Adapter behavior consistency',
    ],
    failure: [
      'System prioritizes liveness over completeness',
      'Degradation may reduce observability, never application availability',
      'No failure propagates into the request lifecycle',
    ],
    who: 'Teams embedding Tracehound as an internal security primitive',
    cta: 'Get Core',
    highlight: false,
    borderColor: 'border-surface-highlight',
  },
  {
    name: 'Tracehound Production',
    subtitle: 'Operational Stability Contract',
    price: '$799',
    period: '/ month',
    tagline: 'You are no longer testing how the system behaves. You are relying on it.',
    guaranteed: [
      'Backward-compatible contracts for events & notifications',
      'Defined failure behavior under memory pressure',
      'Upgrade-safe releases with no silent semantic changes',
    ],
    notGuaranteed: [],
    failure: [
      'Degradation is explicit and bounded',
      'Adapter failures degrade safely, never silently',
      'Runtime behavior remains consistent across patch upgrades',
    ],
    who: 'Production SaaS systems requiring operational predictability',
    cta: 'Get Production',
    highlight: true,
    borderColor: 'border-primary',
  },
  {
    name: 'Tracehound Enterprise',
    subtitle: 'Compliance & Forensics Substrate',
    price: 'Starting at $1,500',
    period: '/ month',
    tagline: 'This is not observability. This is record-keeping under pressure.',
    guaranteed: [
      'Deterministic snapshot export for offline verification',
      'Stable evidence descriptors suitable for audits',
      'RFC-level guarantees on data shape and behavior',
      'Long-term support branches with frozen semantics',
    ],
    notGuaranteed: [],
    failure: [
      'Evidence integrity is preserved even under forced degradation',
      'All degradation paths are explainable and reviewable',
      'Operational behavior is traceable across versions',
    ],
    who: 'Regulated environments (fintech, payments, healthcare)',
    cta: 'Contact Sales',
    highlight: false,
    borderColor: 'border-surface-highlight',
  },
]
---

<section class="py-24" id="pricing">
  <div class="container-custom">
    <div class="text-center max-w-2xl mx-auto mb-16">
      <h2 class="text-3xl md:text-5xl font-bold mb-6 tracking-tight">
        Pricing based on <span class="text-primary">risk ownership</span>.
      </h2>
      <p class="text-text-muted text-lg">
        You are not paying for features. You are paying for us to take responsibility for
        what happens when your LLM fails.
      </p>
    </div>

    <div class="grid lg:grid-cols-3 gap-8">
      {
        tiers.map((tier) => (
          <div
            class={`relative flex flex-col bg-surface/50 border ${tier.borderColor} ${tier.highlight ? 'border-primary ring-1 ring-primary/20' : ''} p-8 hover:bg-surface/80 transition-colors rounded-sm`}
          >
            {tier.highlight && (
               <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-primary text-background px-3 py-0.5 text-xs font-bold uppercase tracking-wider rounded-sm">
                Recommended
              </div>
            )}

            <div class="mb-8">
              <h3 class="text-xl font-bold text-white mb-1 font-mono">{tier.name}</h3>
              <p class="text-sm text-text-muted mb-6 font-mono">{tier.subtitle}</p>
              <div class="flex items-baseline gap-1">
                <span class="text-4xl font-bold text-white tracking-tight">{tier.price}</span>
                <span class="text-sm text-text-muted font-mono">{tier.period}</span>
              </div>
            </div>

            <div class="space-y-8 flex-1">
               <!-- Guaranteed -->
               <div>
                  <h4 class="text-xs font-bold uppercase tracking-wider text-white mb-4 flex items-center gap-2 font-mono">
                    <Check className="h-4 w-4 text-primary" /> Guaranteed
                  </h4>
                  <ul class="space-y-2">
                    {tier.guaranteed.map((item) => (
                      <li class="text-sm text-text-muted flex items-start gap-2">
                         <span class="w-1 h-1 rounded-full bg-primary/50 mt-2 shrink-0"></span>
                         {item}
                      </li>
                    ))}
                  </ul>
               </div>

               <!-- Not Guaranteed (if any) -->
               {tier.notGuaranteed.length > 0 && (
                 <div>
                    <h4 class="text-xs font-bold uppercase tracking-wider text-text-muted mb-4 flex items-center gap-2 font-mono">
                      <X className="h-4 w-4 text-text-muted" /> Not Guaranteed
                    </h4>
                    <ul class="space-y-2">
                      {tier.notGuaranteed.map((item) => (
                        <li class="text-sm text-text-muted/60 flex items-start gap-2">
                           <span class="w-1 h-1 rounded-full bg-text-muted/30 mt-2 shrink-0"></span>
                           {item}
                        </li>
                      ))}
                    </ul>
                 </div>
               )}

               <!-- Failure Mode -->
               <div>
                  <h4 class="text-xs font-bold uppercase tracking-wider text-orange-400 mb-4 flex items-center gap-2 font-mono">
                    <AlertTriangle className="h-4 w-4 text-orange-400" /> Failure Behavior
                  </h4>
                  <ul class="space-y-2">
                    {tier.failure.map((item) => (
                      <li class="text-sm text-text-muted flex items-start gap-2">
                         <span class="w-1 h-1 rounded-full bg-orange-400/50 mt-2 shrink-0"></span>
                         {item}
                      </li>
                    ))}
                  </ul>
               </div>

               <div class="pt-6 border-t border-white/5">
                 <p class="text-xs font-mono text-primary italic mb-2">"{tier.tagline}"</p>
                 <p class="text-xs text-text-muted">Best for: {tier.who}</p>
               </div>
            </div>

            <div class="mt-8 pt-8">
              <a
                href="#"
                class={`block w-full py-3 px-4 text-center text-sm font-bold uppercase tracking-wider rounded-sm transition-all ${
                  tier.highlight
                    ? 'bg-primary text-background hover:bg-primary/90 shadow-[0_0_20px_rgba(242,201,76,0.2)]'
                    : 'bg-surface-highlight text-white hover:bg-surface-highlight/80 border border-white/5'
                }`}
              >
                {tier.cta}
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
